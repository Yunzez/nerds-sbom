<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender name="APP" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>/data/logs/dependency-track.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>/data/logs/dependency-track.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
      <maxFileSize>20MB</maxFileSize>
      <maxHistory>7</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>%date{yyyy-MM-dd HH:mm:ss} %-5level [%logger{50}] %msg%n</pattern>
    </encoder>
  </appender>

  <!-- Silence noisy tasks -->
  <logger name="org.dependencytrack.tasks.mirror" level="WARN"/>
  <logger name="org.dependencytrack.tasks.ossindex" level="WARN"/>
  <logger name="org.dependencytrack.tasks.NistMirrorTask" level="WARN" />
  <logger name="org.dependencytrack.tasks.EpssMirrorTask" level="WARN" />

  <!-- Try to capture servlet requests -->
  <logger name="org.eclipse.jetty.ee10.servlet.ServletHandler" level="DEBUG"/>
  <logger name="org.eclipse.jetty.ee10.servlet.ServletChannel" level="DEBUG"/>
  
  <!-- Alpine filters - these might log HTTP requests -->
  <logger name="alpine.server.filters" level="DEBUG"/>
  <logger name="alpine.server.filters.AuthenticationFilter" level="DEBUG"/>
  <logger name="alpine.server.filters.AuthorizationFilter" level="DEBUG"/>
  
  <!-- Jersey container request logging -->
  <logger name="org.glassfish.jersey.server.ServerRuntime" level="DEBUG"/>
  <logger name="org.glassfish.jersey.servlet.WebComponent" level="DEBUG"/>

  <!-- Resource logging (won't help but keep it) -->
  <logger name="org.dependencytrack.resources" level="DEBUG"/>
  
  <!-- Silence Jetty noise -->
  <logger name="org.eclipse.jetty.io" level="INFO"/>
  <logger name="org.eclipse.jetty.util" level="INFO"/>
  <logger name="org.eclipse.jetty.http" level="INFO"/>
  <logger name="org.eclipse.jetty" level="INFO"/>

  <root level="INFO">
    <appender-ref ref="APP"/>
  </root>
</configuration>